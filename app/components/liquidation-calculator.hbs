<div class="liquidation-calculator container">
  <h2 class="mb-4">Liquidation Price Calculator</h2>

  <div class="form-group mb-3">
    <label class="form-label" for="leverage">Leverage</label>
    <Input
      @type="number"
      id="leverage"
      class="form-control"
      @value={{this.leverage}}
    />
  </div>

  <div class="form-group mb-3">
    <label class="form-label" for="entryPrice">Entry Price (USDT)</label>
    <Input
      @type="number"
      id="entryPrice"
      class="form-control"
      @value={{this.entryPrice}}
    />
  </div>

  <div class="form-group mb-3">
    <label class="form-label" for="balance">Total Account Balance (USDT)</label>
    <Input
      @type="number"
      id="balance"
      class="form-control"
      @value={{this.balance}}
    />
  </div>

  <button
    type="button"
    class="btn btn-primary"
    {{on "click" this.calculateLiquidationPrice}}
  >
    Calculate
  </button>

  {{#if this.liquidationPrice}}
    <h3 class="mt-4">Liquidation Price: {{this.liquidationPrice}} USDT</h3>
  {{/if}}
</div>